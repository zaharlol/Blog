@{
    ViewData["Title"] = "UpdateCom";
}
@model Blog.Models.Comment


<form class="frm" method="post" asp-controller="Comment" asp-action="UpdateComments" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mrgn">
            <div>
                <textarea asp-for="Content" cols="100" rows="7"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div>
        <input class="bg-success text-white" type="submit" value="Обновить данные" />
    </div>
</form>